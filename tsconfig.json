{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "lib": [
            "esnext",
            "dom"
        ],
        "esModuleInterop": true,
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
